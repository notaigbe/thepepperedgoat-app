{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@": ["./"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@style": ["./style"],
      "@hooks": ["./hooks"],
      "@types": ["./types"],
      "@types/*": ["./types/*"],
      "@contexts": ["./contexts"],
      "@contexts/*": ["./contexts/*"],
      "@services": ["./services"],
      "@services/*": ["./services/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@data": ["./data"],
      "@data/*": ["./data/*"],
      "@app": ["./app"],
      "@app/*": ["./app/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "workbox-config.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
